    {
      "name": "‚úàÔ∏è Flights (Amadeus)",
      "description": "Complete flight booking system powered by Amadeus",
      "item": [
        {
          "name": "1Ô∏è‚É£ Search Flights",
          "request": {
            "auth": {"type": "noauth"},
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/api/flights/search?origin=JFK&destination=DXB&departureDate=2025-12-15&adults=2&travelClass=ECONOMY&currencyCode=AED",
              "host": ["{{baseUrl}}"],
              "path": ["api", "flights", "search"],
              "query": [
                {"key": "origin", "value": "JFK", "description": "Origin airport (IATA code)"},
                {"key": "destination", "value": "DXB", "description": "Destination airport"},
                {"key": "departureDate", "value": "2025-12-15", "description": "YYYY-MM-DD"},
                {"key": "returnDate", "value": "2025-12-22", "disabled": true, "description": "For round trip"},
                {"key": "adults", "value": "2"},
                {"key": "children", "value": "0", "disabled": true},
                {"key": "travelClass", "value": "ECONOMY", "description": "ECONOMY, BUSINESS, FIRST"},
                {"key": "currencyCode", "value": "AED"},
                {"key": "nonStop", "value": "false", "disabled": true},
                {"key": "maxResults", "value": "50", "disabled": true}
              ]
            },
            "description": "Search available flights - No authentication required"
          }
        },
        {
          "name": "2Ô∏è‚É£ Confirm Price",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    var jsonData = pm.response.json();",
                  "    pm.environment.set('confirmedFlightOffer', JSON.stringify(jsonData.data));",
                  "    console.log('‚úÖ Price confirmed. Ready to book.');",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [{"key": "Content-Type", "value": "application/json"}],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"flightOffer\": {{confirmedFlightOffer}}\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/flights/confirm-price",
              "host": ["{{baseUrl}}"],
              "path": ["api", "flights", "confirm-price"]
            },
            "description": "Confirm current price before booking (paste flight offer from search)"
          }
        },
        {
          "name": "3Ô∏è‚É£ Get Seat Maps",
          "request": {
            "method": "POST",
            "header": [{"key": "Content-Type", "value": "application/json"}],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"flightOffer\": {{confirmedFlightOffer}}\n}"
