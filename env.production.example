# Production Environment Configuration
# IMPORTANT: Copy this to .env on production server and update values

# Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_NAME=trasealla_db
DB_USER=trasealla_user
DB_PASSWORD=CHANGE_THIS_SECURE_PASSWORD

# JWT Configuration
JWT_SECRET=CHANGE_THIS_TO_LONG_RANDOM_STRING_MIN_32_CHARS
JWT_EXPIRE=7d
JWT_REFRESH_SECRET=CHANGE_THIS_TO_DIFFERENT_LONG_RANDOM_STRING
JWT_REFRESH_EXPIRE=30d

# Server Configuration
PORT=5001
NODE_ENV=production
FRONTEND_URL=https://trasealla.com
BACKEND_URL=https://api.trasealla.com

# File Upload Configuration
MAX_FILE_SIZE=5242880
UPLOAD_PATH=./uploads

# Email Configuration - Microsoft 365 (GoDaddy)
# For Microsoft 365 / Office 365 from GoDaddy
EMAIL_HOST=smtp.office365.com
EMAIL_PORT=587
EMAIL_USER=info@trasealla.com
EMAIL_PASS=your_email_password
EMAIL_FROM=info@trasealla.com
EMAIL_NAME=Trasealla Travel Agency
EMAIL_SECURE=false
EMAIL_TLS=true

# Alternative: Gmail (if using Gmail instead)
# EMAIL_HOST=smtp.gmail.com
# EMAIL_USER=your_email@gmail.com
# EMAIL_PASS=your_app_password

# Payment Gateway
STRIPE_SECRET_KEY=sk_live_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_live_your_stripe_publishable_key

# Amadeus Flight API (Production)
AMADEUS_CLIENT_ID=your_production_amadeus_client_id
AMADEUS_CLIENT_SECRET=your_production_amadeus_client_secret
AMADEUS_ENV=production

# Duffel Flight API (Production)
DUFFEL_API_KEY=duffel_live_your_production_api_key
DUFFEL_ENV=production
DUFFEL_ORG_ID=org_your_organization_id

# Default provider
DEFAULT_FLIGHT_PROVIDER=duffel

# Security
ALLOWED_ORIGINS=https://trasealla.com,https://www.trasealla.com

